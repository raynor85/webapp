<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
	<!-- Common -->
    <definition name="baseLayout" template="/WEB-INF/layout/layout.jsp">
    	<put-attribute name="title" value="default.title" />
        <put-attribute name="navbar" value="/common/navbar.jsp" />
        <put-attribute name="content" value="/WEB-INF/layout/blank.jsp"/>
        <put-attribute name="footer" value="/common/footer.jsp" />
    </definition>


	<!-- Single pages -->
	<definition name="welcome" extends="baseLayout">
        <put-attribute name="title" value="welcome.title" />
        <put-attribute name="content" value="/WEB-INF/pages/welcome.jsp" />
	</definition>
	<definition name="error" extends="baseLayout">
        <put-attribute name="title" value="error.title" />
        <put-attribute name="content" value="/WEB-INF/pages/error.jsp" />
	</definition>
	<definition name="faq" extends="baseLayout">
        <put-attribute name="title" value="faq.title" />
        <put-attribute name="content" value="/WEB-INF/pages/faq.jsp" />
	</definition>
	<definition name="privacy" extends="baseLayout">
        <put-attribute name="title" value="privacy.title" />
        <put-attribute name="content" value="/WEB-INF/pages/privacy.jsp" />
	</definition>
    
</tiles-definitions>
